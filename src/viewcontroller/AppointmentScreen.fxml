<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="600.0" maxWidth="1000.0" minHeight="600.0" minWidth="1000.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewcontroller.AppointmentScreen">
    <AnchorPane layoutX="400.0" layoutY="200.0" prefHeight="200.0" prefWidth="200.0"
                style="-fx-border-color: Black; -fx-border-radius: 10;" AnchorPane.bottomAnchor="50.0"
                AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="50.0">
        <Label layoutX="63.0" layoutY="29.0" text="Upcoming Appointments" AnchorPane.leftAnchor="35.0"
               AnchorPane.topAnchor="15.0">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <TableView fx:id="appointmentTableView" layoutX="16.0" layoutY="71.0" prefHeight="362.0" prefWidth="920.0"
                   AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0">
            <columns>
                <TableColumn fx:id="timeColumn" prefWidth="167.0" resizable="false" text="Appointment Time"/>
                <TableColumn fx:id="typeColumn" prefWidth="83.0" resizable="false" text="Type"/>
                <TableColumn fx:id="descriptionColumn" prefWidth="315.0" resizable="false" text="Description"/>
                <TableColumn fx:id="locationColumn" prefWidth="129.0" resizable="false" text="Location"/>
                <TableColumn fx:id="appointmentLengthColumn" prefWidth="222.0" resizable="false"
                             text="Appointment Length"/>
            </columns>
        </TableView>
        <Button fx:id="appointmentAdd" layoutX="23.0" layoutY="447.0" mnemonicParsing="false"
                onAction="#appointmentAddModHandler" text="Add New Appointment" AnchorPane.bottomAnchor="20.0"
                AnchorPane.leftAnchor="25.0"/>
        <Button fx:id="appointmentUpdate" layoutX="228.0" layoutY="448.0" mnemonicParsing="false"
                onAction="#appointmentAddModHandler" text="Update Appointment" AnchorPane.bottomAnchor="20.0"
                AnchorPane.leftAnchor="205.0"/>
        <Button layoutX="375.0" layoutY="448.0" mnemonicParsing="false"
                onAction="#appointmentDeleteHandler" text="Delete Appointment" AnchorPane.bottomAnchor="20.0"
                AnchorPane.leftAnchor="372.0"/>
        <Button fx:id="viewCustomer" layoutX="833.0" layoutY="448.0" mnemonicParsing="false"
                onAction="#viewCustomerHandler" text="View Customer" AnchorPane.bottomAnchor="20.0"
                AnchorPane.rightAnchor="25.0"/>
    </AnchorPane>
    <Button fx:id="mainMenuButton" alignment="CENTER" contentDisplay="CENTER" layoutX="896.0" layoutY="561.0"
            mnemonicParsing="false" onAction="#mainMenuHandler" text="Return to Main Menu" textAlignment="CENTER"
            AnchorPane.bottomAnchor="12.0" AnchorPane.rightAnchor="50.0"/>
</AnchorPane>
