<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewcontroller.AddModCustomerScreen">
    <Label fx:id="addModLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="99.0" layoutY="23.0" text="Add New Customer" textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="22.0" />
        </font>
    </Label>
    <Label layoutX="45.0" layoutY="85.0" text="Customer Name:" />
    <TextField fx:id="customerNameField" layoutX="168.0" layoutY="80.0" prefHeight="25.0" prefWidth="187.0" />
    <Label layoutX="56.0" layoutY="117.0" text="Address Line 1:" />
    <TextField fx:id="address1Field" layoutX="168.0" layoutY="112.0" prefHeight="25.0" prefWidth="187.0" />
    <Label layoutX="56.0" layoutY="149.0" text="Address Line 2:" />
    <TextField fx:id="address2Field" layoutX="168.0" layoutY="144.0" prefHeight="25.0" prefWidth="187.0" />
    <Label layoutX="114.0" layoutY="183.0" text="City:" />
    <ComboBox fx:id="cityField" layoutX="168.0" layoutY="176.0" prefHeight="31.0" prefWidth="187.0" promptText="Choose a City" />
    <Label layoutX="93.0" layoutY="218.0" text="Country:" />
    <ComboBox fx:id="countryField" layoutX="168.0" layoutY="213.0" onAction="#countryChangeHandler" prefHeight="31.0" prefWidth="187.0" promptText="Choose a Country" />
    <Label layoutX="74.0" layoutY="255.0" text="Postal Code:" />
    <TextField fx:id="postalCodeField" layoutX="168.0" layoutY="250.0" prefHeight="25.0" prefWidth="187.0" />
    <Label layoutX="107.0" layoutY="287.0" text="Phone:" />
    <TextField fx:id="phoneField" layoutX="168.0" layoutY="282.0" prefHeight="25.0" prefWidth="187.0" />
    <Button fx:id="addModButton" contentDisplay="CENTER" layoutX="239.0" layoutY="333.0" mnemonicParsing="false" onAction="#addModCustomerHandler" text="Add Customer" textAlignment="CENTER" />
    <Button fx:id="cancelButton" contentDisplay="CENTER" layoutX="75.0" layoutY="333.0" mnemonicParsing="false" onAction="#addModCustomerHandler" text="Cancel" textAlignment="CENTER" />
</AnchorPane>
