<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="615.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="viewcontroller.CustomerScreen">
   <Label layoutX="25.0" layoutY="25.0" text="Customer Management" textFill="#4050ab">
      <font>
         <Font name="System Bold" size="18.0"/>
      </font>
   </Label>
   <AnchorPane layoutX="30.0" layoutY="75.0" prefHeight="250.0" prefWidth="555.0"
               style="-fx-border-color: black; -fx-border-radius: 10;">
      <Label layoutX="14.0" layoutY="14.0" text="Active Customers">
         <font>
            <Font name="System Bold" size="15.0"/>
         </font>
      </Label>
      <TableView fx:id="customerTableView" layoutX="14.0" layoutY="50.0" prefHeight="146.0" prefWidth="528.0">
         <columns>
            <TableColumn fx:id="idColumn" prefWidth="100.0" text="Customer ID"/>
            <TableColumn fx:id="nameColumn" prefWidth="125.0" text="Customer Name"/>
            <TableColumn fx:id="cityColumn" prefWidth="125.0" text="City"/>
            <TableColumn fx:id="countryColumn" prefWidth="178.0" text="Country"/>
         </columns>
      </TableView>
      <Button fx:id="customerAdd" layoutX="346.0" layoutY="205.0" mnemonicParsing="false"
              onAction="#customerAddHandler" text="Add"/>
      <Button fx:id="customerUpdate" layoutX="402.0" layoutY="205.0" mnemonicParsing="false"
              onAction="#customerUpdateHandler" text="Update"/>
      <Button fx:id="customerDelete" layoutX="478.0" layoutY="205.0" mnemonicParsing="false"
              onAction="#customerDeleteHandler" text="Delete"/>
   </AnchorPane>
   <Button fx:id="mainMenu" layoutX="462.0" layoutY="344.0" mnemonicParsing="false" onAction="#mainMenuHandler"
           prefHeight="31.0" prefWidth="100.0" text="Main Menu"/>
</AnchorPane>
